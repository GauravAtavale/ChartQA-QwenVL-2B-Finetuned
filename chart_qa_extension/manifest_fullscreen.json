{
  "manifest_version": 3,
  "name": "Chart QA Analyzer (Full Screen)",
  "version": "1.0.0",
  "description": "AI-powered chart analysis tool - Full Screen Mode",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup_fullscreen.html",
    "default_title": "Chart QA Analyzer - Full Screen"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
